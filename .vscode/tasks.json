{
	"version": "2.0.0",
	"tasks": [
    {
      "label": "colcon_build",
      "type": "shell",
      "command": "colcon build --packages-up-to ${input:pkgs} --symlink-install",
      "options": {
        "cwd": "${workspaceFolder}/../../"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$gcc"
    },
  ],
  "inputs": [
    {
      "id": "pkgs",
      "type": "pickString",
      "description": "pkgs from this meta pkg",
      "options": [
        "wombat_local_planner",
        "wombat_utility"
      ]
    }
  ]
}y